{
  "name": "charp",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Chase-William/Charp/tree/main"
  },
  "scripts": {
    "ecore": "tsc --build && node ./dist/app.js --development-env --core",
    "etest": "tsc --build && node ./dist/app.js --development-env --test",
    "test": "tsc --build && jest",
    "build": "tsc --build",
    "vendor": "git submodule init && git submodule update --remote --recursive && cd ./vendor/DotDocs.Core && nuget restore & dotnet build",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint eslintrc.json",
    "bundle": "yarn prepare-bundle && yarn bundle-node && yarn post-bundle",
    "prepare-bundle": "yarn build && cd ./vendor/Docshark.Core && nuget restore & dotnet publish -c Release",
    "bundle-node": "pkg ./dist/app.js --targets latest-windows-x64 --out-path deployable",
    "post-bundle": "node bundler.js"
  },
  "dependencies": {
    "copy-dir": "^1.3.0",
    "fast-xml-parser": "^4.0.8",
    "fs-extra": "^10.1.0",
    "typedjson": "^1.8.0"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.17.12",
    "@types/jest": "^27.5.1",
    "@types/node": "^17.0.35",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "jest": "^28.1.0",
    "prettier": "^2.6.2",
    "ts-jest": "^28.0.3",
    "typescript": "^4.6.4"
  }
}
