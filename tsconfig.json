{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "dist",

    /* Required for typescript-json-serializer */
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
  },
  "include": [ "src/**/*.ts" ]
}